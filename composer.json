{
    "name": "brenoroosevelt/middleware",
    "description": "Middleware Pattern Implementation",
    "keywords": [
        "PSR-11",
        "psr",
        "null object pattern",
        "dependency injection",
        "container aware",
        "container",
        "autowire",
        "auto-wiring"
    ],
    "homepage": "https://github.com/brenoroosevelt/php-middleware",
    "license": "MIT",
    "authors": [
        {
            "name": "Breno Roosevelt",
            "email": "breno.roosevelt@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0|^8.1",
        "psr/container": "^1",
        "psr/simple-cache": "*",
        "brenoroosevelt/psr-nullcontainer": "^1",
        "brenoroosevelt/flex-fqcn-finder": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "squizlabs/php_codesniffer": "^3",
        "phpstan/phpstan": "^1",
        "symfony/cache": "@stable"
    },
    "autoload": {
        "psr-4": {
            "BrenoRoosevelt\\Middleware\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BrenoRoosevelt\\Middleware\\Tests\\": "tests"
        }
    },
    "scripts": {
        "check": [
            "phpunit tests",
            "phpcs -p src tests",
            "phpstan analyse src"
        ],
        "test": [
            "phpunit tests"
        ],
        "cs-fix": [
            "phpcbf src"
        ]
    }
}